# MongoDB Configuration
# Replace with your production MongoDB connection string
MONGODB_URI=mongodb://username:password@mongodb-host:27017/warehouse-management-prod?authSource=admin

# JWT Configuration
# IMPORTANT: Use a strong, randomly generated secret key (minimum 32 characters)
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY-MINIMUM-32-CHARACTERS-LONG

# Service URLs (Production)
# Replace with your production service URLs
USERS_SERVICE_URL=https://users.yourdomain.com
AUTH_SERVICE_URL=https://auth.yourdomain.com
PRODUCTS_SERVICE_URL=https://products.yourdomain.com
INVENTORY_SERVICE_URL=https://inventory.yourdomain.com
ORDERS_SERVICE_URL=https://orders.yourdomain.com
PAYMENTS_SERVICE_URL=https://payments.yourdomain.com
NOTIFICATIONS_SERVICE_URL=https://notifications.yourdomain.com
REPORTS_SERVICE_URL=https://reports.yourdomain.com
AUDIT_SERVICE_URL=https://audit.yourdomain.com

# API Gateway Port
PORT=3000

# Environment
NODE_ENV=production

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Security
# Enable HTTPS in production
HTTPS_ENABLED=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_MIN=2

